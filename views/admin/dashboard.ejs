<% layout("layouts/boilerplate") %> 


<div class="row">
    <div class="col-3">
            <%- include("../partials/adminnav") %> 
    </div>
    <div class="col-9" id="maincontent">
        <div class="row"> 
            <div class="col-6 col-md-3 admin-link">
                <div class="card border-0 shadow-sm p-3 d-flex align-items-center" >
                    <div class="bg-primary rounded-circle p-3" style="width: fit-content;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                            <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
                          </svg>
                    </div>
                    <span class="fs-5">Customers</span>
                    <span class="fs-5 text-muted"><%= adminData.noOfCustomers %></span>
                </div>
            </div>
            <div class="col-6 col-md-3 ">
                <a href="/admin/order" class="admin-link">
                <div class="card border-0 shadow-sm p-3 d-flex align-items-center" >
                    <div class="bg-info rounded-circle p-3" style="width: fit-content;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                            <path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z"/>
                            <path d="M7 5.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm-1.496-.854a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 1 1 .708-.708l.146.147 1.146-1.147a.5.5 0 0 1 .708 0zM7 9.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm-1.496-.854a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 0 1 .708-.708l.146.147 1.146-1.147a.5.5 0 0 1 .708 0z"/>
                          </svg>
                    </div>
                    <span class="fs-5">Orders</span>
                    <span class="fs-5 text-muted"><%= adminData.noOfOrders %></span>
                </div>
            </a>
            </div>
            <div class="col-6 col-md-3 ">
                <a href="/admin/products" class="admin-link">
                <div class="card border-0 shadow-sm p-3 d-flex align-items-center" >
                    <div class="bg-success rounded-circle p-3" style="width: fit-content;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                            <path d="M8.186 1.113a.5.5 0 0 0-.372 0L1.846 3.5 8 5.961 14.154 3.5 8.186 1.113zM15 4.239l-6.5 2.6v7.922l6.5-2.6V4.24zM7.5 14.762V6.838L1 4.239v7.923l6.5 2.6zM7.443.184a1.5 1.5 0 0 1 1.114 0l7.129 2.852A.5.5 0 0 1 16 3.5v8.662a1 1 0 0 1-.629.928l-7.185 2.874a.5.5 0 0 1-.372 0L.63 13.09a1 1 0 0 1-.63-.928V3.5a.5.5 0 0 1 .314-.464L7.443.184z"/>
                          </svg>
                    </div>
                    <span class="fs-5">Products</span>
                    <span class="fs-5 text-muted"><%= adminData.noOfProducts %></span>
                </div>
            </a>
            </div>
            <div class="col-6 col-md-3 ">
                <a href="/admin/category" class="admin-link">
                <div class="card border-0 shadow-sm p-3 d-flex align-items-center" >
                    <div class="bg-danger rounded-circle p-3" style="width: fit-content;">
                        <svg xmlns="http://www.w3.org/2000/svg"  width="30" height="30" fill="currentColor" class="bi bi-tag" viewBox="0 0 16 16">
                            <path d="M6 4.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm-1 0a.5.5 0 1 0-1 0 .5.5 0 0 0 1 0z"/>
                            <path d="M2 1h4.586a1 1 0 0 1 .707.293l7 7a1 1 0 0 1 0 1.414l-4.586 4.586a1 1 0 0 1-1.414 0l-7-7A1 1 0 0 1 1 6.586V2a1 1 0 0 1 1-1zm0 5.586 7 7L13.586 9l-7-7H2v4.586z"/>
                          </svg>
                    </div>
                    <span class="fs-5">Categories</span>
                    <span class="fs-5 text-muted"><%= adminData.noOfCategories %></span>
                </div>
            </a>
            </div>
            <div class="today mt-3">
                <div class="row">
                    <div class="col">
                        <div class="bg-white shadow-sm p-3">
                            <% if(orders.length) { %> 
                            <h1 class="fs-4">Recent Orders</h1>
                            <table class="w-100 table" >
                                <thead> 
                                    <th>Date</th>
                                    <th>Customer</th>
                                    <th>Status</th>
                                    <th>Items</th>
                                </thead>
                                <tbody>
                                    <% for(let order of orders) { %>
                                        <tr>
                                            <td><%= order.orderedOn.toDateString() %></td>
                                           <td><%= order.customer.name %></td>
                                            <td><%= order.status %></td>
                                            <td><%= order.totalItems %></td>
                                        </tr>
                                    <% } %>  
                                </tbody>
                            </table>
                            <% } else { %>
                                <h1 class="fs-4">There are no orders</h1>
                                <% } %>  
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
        
</div>
