<% layout("layouts/boilerplate") %>

    <div class="row">
        <div class="col-3">
            <%- include("../partials/usernav") %>
        </div>
        <div class="col-9">
            <!-- Modal dialog box -->
            <!-- Add Address -->
            <div class="modal fade" id="addmodal" tabindex="-1" aria-labelledby="addmodallabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="addmodallabel">New Address</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form action="/user/address" method="post" class="needs-validation form-control border-0 p-0" id="addressForm" novalidate>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label for="firstname" class="form-label">First name *</label>
                                        <input type="text" class="form-control" name="address[firstname]" id="firstname"
                                            required>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="lastname" class="form-label">Last name *</label>
                                        <input type="text" class="form-control" name="address[lastname]" id="lastname"
                                            required>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label for="mobile" class="form-label">Mobile *</label>
                                        <input type="number" class="form-control" name="address[mobile]" id="mobile" onKeyPress="if(this.value.length==10) return false;"
                                            required>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="phone" class="form-label">Phone (Optional)</label>
                                        <input type="number" class="form-control" name="address[phone]" id="phone" onKeyPress="if(this.value.length==10) return false;">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="mb-3">
                                        <label for="firstline" class="form-label">Flat, House no., Building, Company,
                                            Apartment *</label>
                                        <input type="text" class="form-control" name="address[firstline]" id="firstline"
                                            required>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="mb-3">
                                        <label for="secondline" class="form-label">Area, Street, Sector, Village
                                            *</label>
                                        <input type="text" class="form-control" name="address[secondline]"
                                            id="secondline" required>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="mb-3">
                                        <label for="landmark" class="form-label">Landmark *</label>
                                        <input type="text" class="form-control" name="address[landmark]" id="landmark"
                                            required>
                                    </div>

                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label for="city" class="form-label">City *</label>
                                        <input type="text" class="form-control" name="address[city]" id="city" required>

                                    </div>
                                    <div class="col-md-6">
                                        <label for="pincode" class="form-label">Pincode *</label>
                                        <input type="number" class="form-control" name="address[pincode]" id="pincode" min="600000" max="660000"  onKeyPress="if(this.value.length==6) return false;"
                                            required>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="mb-3">
                                        <label for="state" class="form-label">State *</label>
                                        <select name="address[state]" id="state" class="form-select" required>
                                            <option value="">Select State</option>
                                            <option value="Andhra Pradesh">Andhra Pradesh</option>
                                            <option value="Arunachal Pradesh">Arunachal Pradesh</option>
                                            <option value="Assam">Assam</option>
                                            <option value="Bihar">Bihar</option>
                                            <option value="Chhattisgarh">Chhattisgarh</option>
                                            <option value="Goa">Goa</option>
                                            <option value="Gujarat">Gujarat</option>
                                            <option value="Haryana">Haryana</option>
                                            <option value="Himachal Pradesh">Himachal Pradesh</option>
                                            <option value="Jharkhand">Jharkhand</option>
                                            <option value="Karnataka">Karnataka</option>
                                            <option value="Kerala">Kerala</option>
                                            <option value="Madhya Pradesh">Madhya Pradesh</option>
                                            <option value="Manipur">Manipur</option>
                                            <option value="Meghalaya">Meghalaya</option>
                                            <option value="Mizoram">Mizoram</option>
                                            <option value="Nagaland">Nagaland</option>
                                            <option value="Odisha">Odisha</option>
                                            <option value="Punjab">Punjab</option>
                                            <option value="Rajasthan">Rajasthan</option>
                                            <option value="Sikkim">Sikkim</option>
                                            <option value="Tamil Nadu">Tamil Nadu</option>
                                            <option value="Telangana">Telangana</option>
                                            <option value="Tripura">Tripura</option>
                                            <option value="Uttar Pradesh">Uttar Pradesh</option>
                                            <option value="Uttarakhand">Uttarakhand</option>
                                            <option value="Gairsain">Gairsain</option>
                                            <option value="West Bengal">West Bengal</option>
                                        </select>
                                    </div>
                                </div>
                                <button class="btn btn-primary w-100 rounded-pill">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Delete Modal -->
            <!-- Modal dialog box  -->
            <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Delete Address</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <p class="">Are you sure you want to delete this address ?</p>
                            <form id="deleteForm" action="/admin/products/?_method=DELETE" method="post"
                                class="d-inline">
                                <!-- <button type="button" class="btn btn-outline-secondary ms-auto" data-bs-dismiss="modal" aria-label="Close">Cancel</button> -->
                                <button class="btn btn-primary ms-auto d-block" data-bs-dismiss="modal">Yes</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Listing the addresses -->
            <div class="row">
                <div class="col bg-white card border-0 shadow-sm p-3">
                    <% if(addresses.length) { %>
                        <div class="d-flex mb-3">
                            <h1 class="fs-4 d-inline text-primary">My Addresses</h1>
                            <button class="btn btn-primary rounded-pill ms-auto" data-bs-toggle="modal"
                                data-bs-target="#addmodal">Add Address</button>
                        </div>
                        <div class="row">
                            <% for(let address of addresses) { %>
                                <div class="col-4">
                                    <div class="mb-3 card bg-light p-3">
                                        <p class="mb-0 fw-bold"><%= address.firstname %> <%= address.lastname %></p>
                                        <p class="mb-0">Mobile: <%= address.mobile %> <%= address.phone?("Phone: " +  address.phone):""  %> </p>
                                        <p class=" mb-0"><%= address.firstline %></p>
                                        <p class="mb-0"><%= address.secondline %></p>
                                        <p class="mb-0"><%= address.landmark %></p>
                                        <p class="mb-0"><%= address.city %> - <%= address.pincode %></p>
                                        <p class="mb-0"><%= address.state %></p>
                                        <div class="mt-3">
                                            <a href="/user/address/<%= address._id %>">Edit</a>
                                            <div class="ms-2 vr bg-dark"></div>
                                            <a href="#" class="text-danger ms-2 click" data-id="<%= address._id %>">Delete</a>
                                        </div>
                                    </div>
                                    
                                </div>
                            <% } %>
                        </div>
                    <% } else { %>
                        <h1 class="fs-4">There are no saved address</h1>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <script>
        function submitForm(){
            const form = document.querySelector("")
        }

        $(document).ready(function(){
            $(".click").click(function(){ 
                const link = "/user/address/"
                var productId = $(this).data('id')
                productId = productId.concat("?_method=DELETE")
                const actionLink = link.concat(productId)
                $("#deleteForm").attr("action", actionLink);
                $('#deleteModal').modal('show');
            });
        });
    </script>